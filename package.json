    "build:rss": "tsx scripts/build-rss-from-posts.ts",
    "build:resize-images": "tsx scripts/resize-images.ts",
    "build:data": "npm run build:projects-json && npm run build:posts-json && npm run build:cmalt-json && npm run build:rss"
  },
  "dependencies": {
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-icons": "^5.1.0",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@types/node": "^20",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "fast-glob": "^3.3.3",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "zod": "^4.1.12"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "overrides": {
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3"
